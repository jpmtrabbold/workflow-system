import './rubrik.css'
import { createMuiTheme } from '@material-ui/core/styles'
import { ThemeOptions } from '@material-ui/core/styles/createMuiTheme'

export const createTheme = (dark = false) => {
    const purple = dark ? '#DFBAE8' : '#6c217d'
    const purpleLight = dark ? '#DFBAE8' : '#ad14c8'
    const blue = dark ? '#69a2e5' : '#246bbe'//'#66b0ff' : '#2A7DDD'
    var red = dark ? '#ff9fc1' : '#FA0057'
    const options: ThemeOptions = {
        palette: {
            text: dark ? { primary: '#e3e3e3' } : {},
            type: dark ? 'dark' : 'light',
            primary: {
                light: '#66b0ff',
                main: blue,
            },
            secondary: {
                light: purpleLight,
                main: purple,
            },
            error: {
                main: red
            },
        },
        typography: {
            fontFamily: 'Rubrik, sans-serif',
            h5: {
                fontWeight: 100,
                color: purple,
            },
            h6: {
                fontSize: '1.2rem',
                fontWeight: 400,
                color: purple,
            },
            subtitle1: {
                fontWeight: 500,
                color: purple,
            },
            body1: {
                fontSize: '1.00rem',
            },
            body2: {
                fontSize: '0.9rem',
            },
        },
        overrides: {
            MuiAppBar: {
                root: {
                    backgroundImage: dark ? '-webkit-linear-gradient(left, #103259 0%, #40154a 50%)' : '-webkit-linear-gradient(left, #2a7ddd 0%, #6c217d 50%)',
                    '& h6': {
                        color: 'white'
                    },
                    '& button': {
                        color: 'white'
                    },
                },
            },
        }
    }
    return createMuiTheme(options)
}

export const theme = createTheme()